<Page x:ConnectionId='1'
    x:Class="LTgarlic.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:LTgarlic.Helpers"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>
    <Grid>
        <StackPanel x:ConnectionId='2'
            x:Name="ContentArea">
            <TextBlock x:Uid="Settings_Personalization" Style="{ThemeResource SubtitleTextBlockStyle}" />
            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                <TextBlock x:Uid="Settings_Theme" />

                <StackPanel Margin="{StaticResource XSmallTopMargin}">
                    <RadioButton x:ConnectionId='6'
                        x:Uid="Settings_Theme_Light"
                                                                       
                                                                                                                                                             
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Light</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton x:ConnectionId='7'
                        x:Uid="Settings_Theme_Dark"
                                                                       
                                                                                                                                                            
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Dark</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                    <RadioButton x:ConnectionId='8'
                        x:Uid="Settings_Theme_Default"
                                                                       
                                                                                                                                                               
                        FontSize="15"
                        GroupName="AppTheme">
                        <RadioButton.CommandParameter>
                            <xaml:ElementTheme>Default</xaml:ElementTheme>
                        </RadioButton.CommandParameter>
                    </RadioButton>
                </StackPanel>
            </StackPanel>

            <TextBlock x:Uid="Settings_Savinglocation" Style="{ThemeResource SubtitleTextBlockStyle}" Text="Change default saving location"/>


            <StackPanel>
                <TextBox x:ConnectionId='4' x:Uid="currentlocation" x:Name="currentlocation" Style="{ThemeResource DefaultTextBoxStyle}" PlaceholderText="C:\Users\basti\Documents" Margin="{StaticResource XSmallTopMargin}" />
                <Button x:ConnectionId='5' x:Uid="changelocation" Style="{ThemeResource AccentButtonStyle}" Content="Change Location" Margin="{StaticResource XSmallTopMargin}"                              />
            </StackPanel>
                
           
            
            <TextBlock x:Uid="Settings_About" Style="{ThemeResource SubtitleTextBlockStyle}" Margin="{StaticResource MediumTopMargin}"/>

            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                <TextBlock x:ConnectionId='3'                                                           Style="{ThemeResource BodyTextBlockStyle}" />

                <TextBlock
                    x:Uid="Settings_AboutDescription"
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{ThemeResource BodyTextBlockStyle}" />
                <HyperlinkButton x:Uid="SettingsPage_PrivacyTermsLink" Margin="{StaticResource SettingsPageHyperlinkButtonMargin}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

